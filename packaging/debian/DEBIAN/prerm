#!/bin/bash
# prerm script para preyvpn
# Limpia la configuración de sudo al desinstalar

set -e

case "$1" in
    remove|purge)
        # Eliminar configuración de sudo
        SUDOERS_FILE="/etc/sudoers.d/preyvpn"
        if [ -f "$SUDOERS_FILE" ]; then
            rm -f "$SUDOERS_FILE"
            echo "✅ Configuración de sudo eliminada"
        fi
        ;;

    upgrade|deconfigure)
        # No hacer nada en upgrade
        ;;

    failed-upgrade)
        ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0
